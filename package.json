{
    "name": "@jankhoj/maloomscan",
    "version": "0.0.1",
    "description": "Maloomscan is a tool that helps you scan your information.",
    "main": "dist/main.js",
    "type": "module",
    "bin": {
        "maloomscan": "./dist/main.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jafarisimran/maloomscan.git"
    },
    "packageManager": "pnpm@10.11.0",
    "scripts": {
        "build": "pnpm run lint &&tsc --noEmit && vite build && copyfiles -u 1 \"src/**/*.md\" dist",
        "dev": "vite",
        "watch": "vite build --watch",
        "test": "vitest run --coverage",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "clean": "rm -rf dist",
        "prepublishOnly": "pnpm run clean && pnpm run build"
    },
    "keywords": [
        "focus",
        "productivity",
        "notes",
        "genai"
    ],
    "author": "Simran Jafari <jafarisimran@gmail.com>",
    "license": "Apache-2.0",
    "dependencies": {
        "@theunwalked/dreadcabinet": "^0.0.1",
        "@theunwalked/cardigantime": "^0.0.1",
        "@riotprompt/riotprompt": "^0.0.1",
        "@types/fluent-ffmpeg": "^2.1.27",
        "commander": "^14.0.0",
        "dayjs": "^1.11.13",
        "dotenv": "^16.5.0",
        "fluent-ffmpeg": "^2.1.3",
        "glob": "^11.0.2",
        "js-yaml": "^4.1.0",
        "luxon": "^3.6.1",
        "moment-timezone": "^0.5.48",
        "openai": "^4.98.0",
        "winston": "^3.17.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.26.0",
        "@rollup/plugin-replace": "^6.0.2",
        "@swc/core": "^1.11.24",
        "@types/js-yaml": "^4.0.9",
        "@types/luxon": "^3.6.2",
        "@types/node": "^22.15.17",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitest/coverage-v8": "^3.2.4",
        "copyfiles": "^2.4.1",
        "eslint": "^9.26.0",
        "eslint-plugin-import": "^2.31.0",
        "globals": "^16.1.0",
        "rollup-plugin-preserve-shebang": "^1.0.1",
        "rollup-plugin-visualizer": "^5.14.0",
        "typescript": "^5.8.3",
        "vite": "^7.0.1",
        "vite-plugin-node": "^5.0.1",
        "vitest": "^3.2.4"
    }
}